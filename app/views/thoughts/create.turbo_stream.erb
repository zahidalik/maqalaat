<%= turbo_stream.prepend("user_thoughts", @thought) %>
<%= turbo_stream.update("flash") do %>
  <div class="px-1 py-1 bg-green-300 text-sm text-green-700 border border-green-700 flex justify-center items-center animate__animated animate__bounceInRight">
    Thought shared!
    <%= link_to user_path(@thought.user), data: {"turbo_frame": "_top"}, class: "bg-blue-600 px-1 py-1 text-sm text-gray-50 rounded-lg shadow-xl" do %>
      Close
    <% end %>
  </div>
<% end %>
