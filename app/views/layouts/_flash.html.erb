<% if notice %>
  <div class="px-4 py-2 bg-green-300 text-green-700 border border-green-700 flex justify-center items-center animate__animated animate__bounceInDown">
    <%= notice %>
  </div>
<% end %>


<% if alert %>
  <div class="px-4 py-2 bg-red-300 text-red-700 border border-red-700 flex justify-center items-center animate__animated animate__bounceInDown">
    <%= alert %>
  </div>
<% end %>
