<%= simple_form_for(user, html: { class: "flex flex-col items-start space-y-7"}, defaults: {label_html: { class: "md:text-lg font-light text-gray-800" }, input_html: { class: "block md:inline-block md:ml-4 px-1 md:px-2 md:py-1 text-gray-700 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-300 focus:ring-1 focus:ring-blue-300" }, error_html: { class: "block text-sm text-red-500"} }) do |f| %>
  <%= f.input :name, placeholder: "first second last", error: "Name can't be blank" %>
  <%= f.input :email, placeholder: "example@example.com", error: 'Email is mandatory, please specify one' %>
  <%= f.input :nationality %>
  <%= f.input :qualifications %>
  <%= f.input :password, required: true, error: "Password can't be blank" %>
  <%= f.input :password_confirmation, error: "Password confirmation is mandatory and needs to match Password" %>
  <%= f.submit class: "w-full text-white px-2 py-1 bg-green-700 shadow-xl rounded-lg" %>
<% end %>
