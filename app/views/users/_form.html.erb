<%= simple_form_for(user,
  html: { class: "flex flex-col items-start space-y-7"},
  defaults: {label_html: { class: "md:text-lg font-light text-gray-800" },
  input_html: { class: "block md:inline-block md:ml-4 px-1 md:px-2 md:py-1 text-gray-700 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-300 focus:ring-1 focus:ring-blue-300" },
  error_html: { class: "pl-2 block text-sm text-red-500"},
  hint_html: { class: "pl-2 block text-sm text-gray-400"} }) do |f| %>
  <%= f.input :username, placeholder: "user123", hint: "this will be visible to all" %>
  <%= f.input :name, placeholder: "first second last" %>
  <%= f.input :email, placeholder: "example@example.com" %>
  <%= f.input :nationality %>
  <%= f.input :qualifications %>
  <%= f.input :password, required: true, hint: "minimum 6 characters" %>
  <%= f.input :password_confirmation %>
  <%= f.submit yield(:button_text), class: "w-full text-white px-2 py-1 bg-green-700 shadow-xl rounded-lg hover:bg-green-800" %>
<% end %>
