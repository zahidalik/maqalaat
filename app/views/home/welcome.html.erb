<% provide(:title, "Home") %>

<div class="min-h-screen flex flex-col justify-around items-center">
  <div class="mb-16 md:grid md:grid-cols-2 md:gap-7">
    <div class="flex flex-col justify-center items-center">
      <div class="text-3xl text-white md:text-6xl font-extralight">
        iShareThoughts
      </div>
      <div class="text-sm md:text-xl pt-3 text-gray-50 font-extralight">
        Think aloud. Share your thoughts.
      </div>
    </div>
    <div class="max-w-96 h-auto mt-8 md:mt-0 flex flex-col justify-center items-center space-y-4">
      <h1 class="text-sm md:text-xl text-gray-50 font-light shadow-xl">Latest Thoughts</h1>
      <% @latest_thoughts.each do |latest_thought| %>
        <div class="w-5/6 lg:w-full px-4 py-2 bg-slate-200 text-gray-500 rounded-lg shadow-xl flex justify-start items-baseline space-x-3">
        <h1 class="text-sm rounded hover:bg-gray-400"><%= link_to latest_thought.user.name, user_url(latest_thought.user) %></h1>
        <h2 class="text-sm font-bold rounded hover:bg-gray-400"><%= link_to latest_thought.title, thought_path(latest_thought) %></h2>
      </div>
      <% end %>
      <div class="w-5/6 lg:w-full px-4 py-2 bg-blue-500 hover:bg-blue-600 text-gray-50 rounded-lg shadow-xl flex justify-center items-center">
        <%= link_to "Share your thought", logged_in? ? user_path(current_user) : signin_url %>
      </div>
    </div>
  </div>
</div>
