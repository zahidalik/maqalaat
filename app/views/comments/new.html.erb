<% provide(:button_text, "Leave comment") %>

<%= turbo_frame_tag "new_comment" do %>
  <%= simple_form_for([@thought, @comment],
    html: { class: "w-5/6 md:w-auto space-y-3"},
    defaults: 
      { input_html: { class: "block w-5/6 h-48 md:w-2/3 md:ml-4 px-1 md:px-2 md:py-1 text-gray-700 border border-gray-300 rounded focus:outline-none focus:border-blue-300 focus:ring-1 focus:ring-blue-300" },
      label_html: { class: "text-lg font-light text-gray-700" },
      error_html: { class: "pl-2 block text-sm text-red-500"} }) do |f| %>
    <%= f.input :content, label: "Write a comment:" %>
    <%= turbo_frame_tag "comment_flash" do %>
      <%= render "comments/comment_flash" %>
    <% end %>
    <%= f.submit yield(:button_text), class: "text-white px-2 py-1 bg-blue-700 shadow-xl rounded-lg hover:bg-blue-800" %>
  <% end %>
<% end %>